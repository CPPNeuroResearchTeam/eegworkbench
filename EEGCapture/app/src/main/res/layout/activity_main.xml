<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.workbench.eeg.eegcapture.MainActivity">

    <TextView
        android:id="@+id/second_app_init_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Second App Initial Activity" />

    <TextView
        android:id="@+id/bt_status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/second_app_init_tv"
        android:text="" />

    <TextView
        android:id="@+id/nsm_status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_status_tv"
        android:text="" />
    <TextView
        android:id="@+id/nsm_active_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nsm_status_tv"
        android:text="" />

    <TextView
        android:id="@+id/trial_label_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nsm_status_tv"
        android:text="# of trials:" />

    <EditText
        android:id="@+id/trial_count_te"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/trial_label_tv"
        android:layout_below="@id/nsm_status_tv"
        android:layout_marginBottom="16pt"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/trial_count_te"
        android:enabled="true"
        android:text="@string/button_next"
        android:onClick="toTraining"
        android:id="@+id/next_button"
        />
</RelativeLayout>
